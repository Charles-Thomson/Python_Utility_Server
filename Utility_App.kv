
<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "pythonLogo.png"

    MDLabel:
        text: "Python Utility Server"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "Charles.Steven.Thomson@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        MDList:
            OneLineListItem:
                text: "Home"
                on_press:
                    root.nav_drawer.toggle_nav_drawer()
                    root.screen_manager.current = "main_page"


            OneLineListItem:
                text: "Suffix Calculator"
                on_press:
                    root.nav_drawer.toggle_nav_drawer()
                    root.screen_manager.current = "suffix_calculator_page"
                    # root.utility_button_selection("Suffix Calculator")

            OneLineListItem:
                text: "Hang Man"
                on_press:
                    root.nav_drawer.toggle_nav_drawer()
                    root.screen_manager.current = "hang_man_page"

            OneLineListItem:
                text: "Chat Room"
                on_press:
                    root.nav_drawer.toggle_nav_drawer()
                    root.screen_manager.current = "chat_room_page"



Screen:

    NavigationLayout:

        ScreenManager: # Add screens following this
            id: ScreenManager

            Screen:  # Screen being defined ?
                name: "login_page"

                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (1,1,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    orientation: 'vertical'

                    MDToolbar:
                        title: "Python Utility Server"
                        elevation: 10
                        # left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"x": 0, "top": 1}


                    MDTextField:
                        id: username_field
                        color_mode: "primary"
                        hint_text: "Enter a Username"
                        helper_text: "enter"
                        pos_hint: {"x": 0.3, "top": .6}
                        size_hint: .4, .1
                        halign: 'left'
                        required: True


                    MDFillRoundFlatButton:
                        id: name_field_button
                        text: "CONNECT"
                        bold: True
                        theme_text_colour: 'Custom'
                        text_color: (1,1,1,1)
                        pos_hint: {"x": 0.3, "top": .4}
                        size_hint: .4, .09

                        # New button behaviour structure
                        # on_release: app.send_username(username_field.text)
                        on_release: ScreenManager.current = "main_page" # remove later so the field is required to continue


            Screen:
                name: "main_page"
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (1,1,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    orientation: 'vertical'

                    MDToolbar:
                        title: "Python Utility Server"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"x": 0, "top": 1}

                    Label:
                        pos_hint: {"x": -.3, "top": 1.3}
                        text: "Hello, and welcome to the utility server "
                        color: 0,0,0,1
                        # text_size: self.size

            Screen:
                name: "suffix_calculator_page"
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (1,1,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    orientation: 'vertical'

                    MDToolbar:
                        title: "Python Utility Server - Suffix Calculator"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"x": 0, "top": 1}

                    Label:
                        pos_hint: {"x": -.3, "top": 1.3}
                        text: app.result_text
                        color: 0,0,0,1
                        # text_size: self.size

                    MDTextFieldRound:
                        id: input_field
                        icon_left: ''
                        icon_right: ''
                        size_hint: None, None
                        size: root.width - dp(150), dp(40)
                        pos_hint: {"center_x": .48, "top": .13}
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        normal_color: 0,0,0,.1
                        foreground_color: 0,0,0,1

                    MDIconButton:
                        id: send_button
                        size_hint: None, None
                        size: dp(60), dp(60)
                        icon_size: '150sp'
                        font_size: 100
                        icon: "location-enter"
                        pos_hint: {"x": .9, "top": .135}
                        theme_text_color: "Custom"
                        text_color: app.theme_cls.primary_color
                        on_press: app.pass_suffix_msg(input_field.text)

            Screen:
                name: "hang_man_page"
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (1,1,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    orientation: 'vertical'

                    MDToolbar:
                        title: "Python Utility Server - Hang Man"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"x": 0, "top": 1}

                    Label:
                        pos_hint: {"x": -.3, "top": 1.3}
                        text: "Hang Man"
                        color: 0,0,0,1
                        # text_size: self.size

            Screen:
                name: "chat_room_page"
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (1,1,1)
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    orientation: 'vertical'

                    MDToolbar:
                        title: "Python Utility Server - Chat Room"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        md_bg_color: app.theme_cls.primary_color
                        pos_hint: {"x": 0, "top": 1}

                    Label:
                        pos_hint: {"x": -.3, "top": 1.3}
                        text: "chat room"
                        color: 0,0,0,1
                        # text_size: self.size






        MDNavigationDrawer:
            id: nav_drawer



            ContentNavigationDrawer:
                screen_manager: ScreenManager
                nav_drawer: nav_drawer


















